# Linux start script should use lf
/gradlew        text eol=lf

# These are Windows script files and should use crlf
*.bat           text eol=crlf

# Exclude directories from GitHub's language calculations
rsrcs/shaders/** linguist-vendored=true
output/* linguist-vendored=true
rsrcs/webgpu/wip_shaders/** linguist-vendored=true
rsrcs/wip_generated_files/** linguist-vendored=true