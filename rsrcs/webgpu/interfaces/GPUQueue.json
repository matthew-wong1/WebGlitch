{
  "receiverType": "GPUQueue",
  "requirements": ["GPUQueue"],
  "methods": [
    {
      "name": "writeBuffer",
      "returnType": "none",

      "properties": [
        {
          "buffer": {
            "type": "GPUBuffer",
            "conditions": {
              "same": ["GPUDevice"],
              "withAttributes": {
                "usage": ["GPUBufferUsage.COPY_DST"]
              },
              "setUnavailable": {
                "buffer": ["GPUQueue.writeBuffer"]
              }
            }
          },
          "bufferOffset": {
            "type": "uint",
            "conditions": {
              "min": 0,
              "max": "this.buffer.size",
              "divisible": 4
            }
          },
          "data": {
            "type": "typedArray"
          }
        }
      ]
    }
  ],
  "attributes": [
    {
      "name": "label",
      "returnType": "string"
    }
  ]
}