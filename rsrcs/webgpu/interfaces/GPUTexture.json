{
  "receiverType": "GPUTexture",
  "requirements": ["GPUTexture"],
  "methods": [
    {
      "name": "createView",
      "paramType": "object",
      "returnType": "GPUTextureView",
      "properties": [
        {
          "aspect": {
            "type": "string",
            "enum": [
              "all",
              "depth-only",
              "stencil-only"
            ],
            "conditions": {
              "textureAspectCompatible": true
            },
            "optional": true
          },
          "dimension": {
            "type": "string",
            "enum": true,
            "conditions": {
              "constraints": true,
              "enum": {
                "GPUTexture.dimension": {
                  "1d": ["1d"],
                  "2d": ["2d", "2d-array", "cube", "cube-array"],
                  "3d": ["3d"]
                },
                "GPUTexture.sampleCount": {
                  "1": ["1d", "2d", "2d-array", "cube", "cube-array", "3d"],
                  "4": ["2d"]
                },
                "GPUTexture.size.depthOrArrayLayers": {
                  "1": ["1d", "2d", "2d-array", "cube", "3d"],
                  "2": ["1d", "2d", "2d-array", "cube", "3d"],
                  "3": ["1d", "2d", "2d-array", "cube", "3d"],
                  "4": ["1d", "2d", "2d-array", "cube", "3d"],
                  "5": ["1d", "2d", "2d-array", "cube", "3d"]
                }
              }
            },

            "optional": true
          },
          "arrayLayerCount": {
            "type": "uint",
            "optional": true,
            "conditions": {
              "min": {
                "constraints": {
                  "dimension": {
                    "1d": 1,
                    "2d": 1,
                    "2d-array": 1,
                    "cube": 1,
                    "cube-array": 6,
                    "3d": 1
                  }
                }
              },
              "max": {
                "constraints": {
                  "dimension": {
                    "1d": 1,
                    "2d": 1,
                    "2d-array": "GPUTexture.size.depthOrArrayLayers",
                    "cube": 6,
                    "cube-array": "GPUTexture.size.depthOrArrayLayers",
                    "3d": 1
                  }
                }
              },
              "divisible": {
                "constraints": {
                  "dimension": {
                    "cube-array": 6
                  }
                }
              }
            }
          },
          "baseArrayLayer": {
            "type": "uint",
            "optional": true,
            "conditions": {
              "max": {
                "comparison": {
                  "GPUTexture.size.depthOrArrayLayers": {
                    "otherParams": ["arrayLayerCount"],
                    "comparisonOperator": "<=",
                    "operator": "+"
                  },
                  "arrayLayerCount": {
                    "comparisonOperator": "<"
                  }
                }
              }
            }
          },
          "mipLevelCount": {
            "type": "uint",
            "optional": true,
            "conditions": {
              "constraints": true,
              "min": 1,
              "max": "GPUTexture.mipLevelCount"
            }
          },
          "baseMipLevel": {
            "type": "uint",
            "optional": true,
            "conditions": {
              "max": {
                "comparison": {
                  "GPUTexture.mipLevelCount": {
                    "comparisonOperator": "<=",
                    "operator": "+",
                    "otherParams": [
                      "mipLevelCount"
                    ]
                  }
                }
              }
            }
          },
          "format": {
            "type": "gpuTextureFormat",
            "enum": true,
            "inFile": true,
            "optional": true,
            "conditions": {
              "textureAspectCompatible": true,
              "textureViewFormatsCompatible": true,
              "cubeCompatible": true
            }
          },
          "label": {
            "type": "string",
            "optional": true
          }
        }
      ]
    },
    {
      "name": "destroy",
      "returnType": "none",
      "deletes": true
    }
  ]
}