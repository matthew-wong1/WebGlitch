{
  "receiverType": "GPUTexture",
  "requirements": ["GPUTexture"],
  "methods": [
    {
      "name": "createView",
      "paramType": "object",
      "returnType": "GPUTextureView",
      "properties": [
        {
          "arrayLayerCount": {
            "type": "uint",
            "optional": true
          },
          "aspect": {
            "type": "string",
            "enum": [
              "all",
              "depth-only",
              "stencil-only"
            ],
            "conditions": {
              "textureFormatCompatible": "format"
            },
            "optional": true
          },
          "baseArrayLayer": {
            "type": "uint",
            "optional": true
          },
          "baseMipLevel": {
            "type": "uint",
            "optional": true
          },
          "dimension": {
            "type": "string",
            "enum": [
              "1d",
              "2d",
              "2d-array",
              "cube",
              "cube-array",
              "3d"
            ],
            "optional": true
          },
          "format": {
            "type": "gpuTextureFormat",
            "enum": true,
            "inFile": true,
            "optional": true
          },
          "label": {
            "type": "string",
            "optional": true
          },
          "mipLevelCount": {
            "type": "uint",
            "optional": true
          }
        }
      ]
    },
    {
      "name": "destroy",
      "returnType": "none",
      "deletes": true
    }
  ]
}