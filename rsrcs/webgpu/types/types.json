{
  "clearValue": [
    {
      "r": {
        "type": "rgba"
      },
      "g": {
        "type": "rgba"
      },
      "b": {
        "type": "rgba"
      },
      "a": {
        "type": "rgba"
      }
    }
  ],

  "colorAttachments": [
    {
      "clearValue": {
        "type": "clearValue",
        "optional": true
      },
      "loadOp": {
        "type": "string",
        "enum": [
          "clear",
          "load"
        ]
      },
      "storeOp": {
        "type": "string",
        "enum": [
          "discard",
          "store"
        ]
      },
      "view": {
        "type": "GPUTextureView",
        "conditions": {
          "same": [
            "GPUDevice"
          ],
          "withAttributes": {
            "GPUTexture.usage": [
              "GPUTextureUsage.RENDER_ATTACHMENT"
            ],
            "GPUTexture.dimension": ["2d", "3d"],
            "GPUTexture.format": [
              "r8unorm",
              "r16float",
              "rg8unorm",
              "rg16float",
              "rgba8unorm",
              "rgba8unorm-srgb",
              "bgra8unorm",
              "bgra8unorm-srgb",
              "rgb10a2unorm",
              "rgba16float",
              "rgba32float"
            ],
            "GPUTextureView.mipLevelCount": [
              1
            ],
            "GPUTextureView.arrayLayerCount": [
              1
            ],
            "GPUTextureView.dimension": ["2d", "2d-array", "3d"]
          }
        }
      },
      "depthSlice": {
        "type": "uint",
        "optional": true,
        "dawnOnly": true,
        "conditions": {
          "constraints": true,
          "max": {
            "customValidation": "depthSlice"
          },
          "min": 0
        }
      }
    }
  ],

  "textureSize": [
    {
      "width": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 8192,
                "2d": 8192,
                "3d": 2048
              }
            }
          }
        }
      },
      "height": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 1,
                "2d": 8192,
                "3d": 2048
              }
            }
          }
        },
        "optional": true
      },
      "depthOrArrayLayers": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 1,
                "2d": 256,
                "3d": 256
              },
              "sampleCount": {
                "4": 1
              }
            }
          }
        }
      }
    }
  ],
  "depthStencil": [
    {
      "depthBias": {
        "type": "ufloat",
        "optional": true
      },
      "depthBiasClamp": {
        "type": "ufloat",
        "optional": true
      },
      "depthBiasSlopeScale": {
        "type": "ufloat",
        "optional": true
      },
      "depthCompare": {
        "type": "depthFragmentTest",
        "enum": true,
        "inFile": true
      },
      "depthWriteEnabled": {
        "type": "boolean"
      },
      "format": {
        "type": "gpuTextureFormat",
        "enum": true,
        "inFile": true,
        "conditions": {
          "depthOrStencil": true
        }
      },
      "stencilBack": {
        "type": "stencilBack"
      },
      "stencilFront": {
        "type": "stencilBack"
      },
      "stencilReadMask": {
        "type": "bitmask"
      },
      "stencilWriteMask": {
        "type": "bitmask"
      }
    }
  ],
  "stencilBack": [
    {
      "compare": {
        "type": "depthFragmentTest",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "depthFailOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "failOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "passOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      }
    }
  ],
  "fragment": [
    {
      "entryPoint": {
        "type": "shaderEntryPoint"
      },
      "module": {
        "type": "GPUShaderModule",
        "conditions": {
          "same": ["GPUDevice"],
          "withAttributes": {
            "GPUShaderModule.label": ["fragment"]
          }
        }
      },
      "targets": {
        "type": "targets",
        "array": true
      }
    }
  ],
  "targets": [
    {
      "blend": {
        "type": "blend",
        "optional": true
      },
      "format": {
        "type": "gpuTextureFormat",
        "enum": true,
        "inFile": true,
        "conditions": {
          "blendFormatCompatible": true,
          "colorRenderable": true
        }
      },
      "writeMask": {
        "type": "bitwiseFlag",
        "enum": [
          "GPUColorWrite.RED",
          "GPUColorWrite.GREEN",
          "GPUColorWrite.BLUE",
          "GPUColorWrite.ALPHA",
          "GPUColorWrite.ALL"
        ],
        "optional": true
      }
    }
  ],
  "blend": [
    {
      "alpha": {
        "type": "blendFactor"
      },
      "color": {
        "type": "blendFactor"
      }
    }
  ],
  "blendFactor": [
    {
      "operation": {
        "type": "string",
        "optional": true,
        "enum": [
          "add",
          "max",
          "min",
          "reverse-subtract",
          "subtract"
        ]
      },
      "dstFactor": {
        "type": "blendFactorOperation",
        "enum": true,
        "inFile": true,
        "optional": true,
        "conditions": {
          "blendOperationCompatible": true
        }
      },
      "srcFactor": {
        "type": "blendFactorOperation",
        "enum": true,
        "inFile": true,
        "optional": true,
        "conditions": {
          "blendOperationCompatible": true
        }

      }
    }
  ],
  "multisample": [
    {
      "alphaToCoverageEnabled": {
        "optional": true,
        "type": "boolean"
      },
      "count": {
        "type": "uint",
        "conditions": {
          "attachmentTextureCompatible": true
        },
        "optional": true
      },
      "mask": {
        "type": "bitmask",
        "optional": true
      }
    }
  ],
  "primitive": [
    {
      "cullMode": {
        "type": "string",
        "enum": [
          "back",
          "front",
          "none"
        ],
        "optional": true
      },
      "frontFace": {
        "type": "string",
        "enum": [
          "ccw",
          "cw"
        ],
        "optional": true
      },
      "topology": {
        "type": "string",
        "optional": true,
        "enum": [
          "line-list",
          "line-strip",
          "point-list",
          "triangle-list",
          "triangle-strip"
        ]
      },
      "stripIndexFormat": {
        "type": "string",
        "enum": true,
        "conditions": {
          "constraints": true,
          "enum": {
            "topology": {
              "line-list": [],
              "point-list": [],
              "triangle-list": [],
              "line-strip": ["uint16", "uint32"],
              "triangle-strip": ["uint16", "uint32"]
            }
          }
        },
        "optional": true
      }
    }
  ],
  "vertex": [
    {
      "entryPoint": {
        "type": "shaderEntryPoint"
      },
      "module": {
        "type": "GPUShaderModule",
        "conditions": {
          "same": ["GPUDevice"],
          "withAttributes": {
            "GPUShaderModule.label": ["vertex"]
          }
        }
      }
    }
  ]
}