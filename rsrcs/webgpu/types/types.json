{
  "clearValue": [
    {
      "r": {
        "type": "rgba"
      },
      "g": {
        "type": "rgba"
      },
      "b": {
        "type": "rgba"
      },
      "a": {
        "type": "rgba"
      }
    }
  ],

  "colorAttachments": [
    {
      "clearValue": {
        "type": "clearValue",
        "optional": true
      },
      "loadOp": {
        "type": "string",
        "enum": [
          "clear",
          "load"
        ]
      },
      "storeOp": {
        "type": "string",
        "enum": [
          "discard",
          "store"
        ]
      },
      "view": {
        "type": "GPUTextureView",
        "conditions": {
          "same": [
            "GPUDevice"
          ],
          "withAttributes": {
            "GPUTexture.usage": [
              "GPUTextureUsage.RENDER_ATTACHMENT"
            ],
            "GPUTexture.dimension": ["2d", "3d"],
            "GPUTexture.format": [
              "r8unorm",
              "r8uint",
              "r8sint",
              "r16uint",
              "r16sint",
              "r16float",
              "rg8unorm",
              "rg8uint",
              "rg8sint",
              "r32uint",
              "r32sint",
              "r32float",
              "rg16uint",
              "rg16sint",
              "rg16float",
              "rgba8unorm",
              "rgba8unorm-srgb",
              "rgba8uint",
              "rgba8sint",
              "bgra8unorm",
              "bgra8unorm-srgb",
              "rgb10a2uint",
              "rgb10a2unorm",
              "rg32uint",
              "rg32sint",
              "rg32float",
              "rgba16uint",
              "rgba16sint",
              "rgba16float",
              "rgba32uint",
              "rgba32sint",
              "rgba32float"
            ],
            "GPUTextureView.mipLevelCount": [
              1
            ],
            "GPUTextureView.arrayLayerCount": [
              1
            ],
            "GPUTextureView.dimension": ["2d", "2d-array", "3d"]
          }
        }
      },
      "depthSlice": {
        "type": "uint",
        "optional": true,
        "dawnOnly": true,
        "conditions": {
          "constraints": true,
          "max": {
            "customValidation": "depthSlice"
          },
          "min": 0
        }
      }
    }
  ],

  "depthStencilAttachment": [
    {
      "view": {
        "type": "GPUTextureView",
        "conditions": {
          "same": ["GPUDevice"],
          "withAttributes": {
            "GPUTexture.usage": [
              "GPUTextureUsage.RENDER_ATTACHMENT"
            ],
            "GPUTexture.dimension": ["2d"],
            "GPUTexture.format": [
              "stencil8",
              "depth16unorm",
              "depth24plus",
              "depth24plus-stencil8",
              "depth32float"
            ],
            "GPUTexture.size.depthOrArrayLayers": ["parent.colorAttachments.view.GPUTexture.size.depthOrArrayLayers"],
            "GPUTexture.size.width": ["parent.colorAttachments.view.GPUTexture.size.width"],
            "GPUTexture.size.height": ["parent.colorAttachments.view.GPUTexture.size.height"],
            "GPUTexture.sampleCount": ["parent.colorAttachments.view.GPUTexture.sampleCount"],
            "GPUTexture.mipLevelCount": ["parent.colorAttachments.view.GPUTexture.mipLevelCount"],
            "GPUTextureView.baseMipLevel": ["parent.colorAttachments.view.Inner.baseMipLevel"],
            "GPUTextureView.mipLevelCount": [
              1
            ],
            "GPUTextureView.arrayLayerCount": [
              1
            ],
            "GPUTextureView.dimension": ["2d", "2d-array"]
          }
        }
      },
      "depthReadOnly": {
        "type": "boolean",
        "optional": true
      },
      "depthStoreOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "discard",
          "store"
        ],
        "conditions": {
          "readCompatible": "depth"
        }
      },
      "depthLoadOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "clear",
          "load"
        ],
        "conditions": {
          "readCompatible": "depth"
        }
      },
      "depthClearValue": {
        "type": "double",
        "conditions": {
          "min": 0,
          "max": 1
        },
        "optional": true
      },
      "stencilClearValue": {
        "type": "uint",
        "optional": true
      },
      "stencilReadOnly": {
        "type": "boolean",
        "optional": true,
        "conditions": {
          "readCompatible": true
        }
      },
      "stencilLoadOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "clear",
          "load"
        ],
        "conditions": {
          "readCompatible": "stencil"
        }
      },
      "stencilStoreOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "discard",
          "store"
        ],
        "conditions": {
          "readCompatible": "stencil"
        }
      }
    }
  ],

  "textureSize": [
    {
      "width": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 8192,
                "2d": 8192,
                "3d": 2048
              }
            }
          }
        }
      },
      "height": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 1,
                "2d": 8192,
                "3d": 2048
              }
            }
          }
        },
        "optional": true
      },
      "depthOrArrayLayers": {
        "type": "uint",
        "conditions": {
          "min": 1,
          "max": {
            "constraints": {
              "dimension": {
                "1d": 1,
                "2d": 256,
                "3d": 256
              },
              "sampleCount": {
                "4": 1
              }
            }
          }
        }
      }
    }
  ],
  "depthStencil": [
    {
      "depthBias": {
        "type": "ufloat",
        "optional": true
      },
      "depthBiasClamp": {
        "type": "ufloat",
        "optional": true
      },
      "depthBiasSlopeScale": {
        "type": "ufloat",
        "optional": true
      },
      "depthCompare": {
        "type": "depthFragmentTest",
        "enum": true,
        "inFile": true
      },
      "depthWriteEnabled": {
        "type": "boolean"
      },
      "format": {
        "type": "gpuTextureFormat",
        "enum": true,
        "inFile": true,
        "conditions": {
          "depthOrStencil": true
        }
      },
      "stencilBack": {
        "type": "stencilBack"
      },
      "stencilFront": {
        "type": "stencilBack"
      },
      "stencilReadMask": {
        "type": "bitmask"
      },
      "stencilWriteMask": {
        "type": "bitmask"
      }
    }
  ],
  "stencilBack": [
    {
      "compare": {
        "type": "depthFragmentTest",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "depthFailOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "failOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      },
      "passOp": {
        "type": "depthFailOp",
        "enum": true,
        "inFile": true,
        "optional": true
      }
    }
  ],
  "fragment": [
    {
      "entryPoint": {
        "type": "shaderEntryPoint"
      },
      "module": {
        "type": "GPUShaderModule",
        "conditions": {
          "same": ["GPUDevice"],
          "withAttributes": {
            "GPUShaderModule.label": ["fragment"]
          }
        }
      },
      "targets": {
        "type": "targets",
        "array": true
      }
    }
  ],
  "targets": [
    {
      "blend": {
        "type": "blend",
        "optional": true
      },
      "format": {
        "type": "gpuTextureFormat",
        "enum": true,
        "inFile": true,
        "conditions": {
          "blendFormatCompatible": true,
          "colorRenderable": true
        }
      },
      "writeMask": {
        "type": "bitwiseFlag",
        "enum": [
          "GPUColorWrite.RED",
          "GPUColorWrite.GREEN",
          "GPUColorWrite.BLUE",
          "GPUColorWrite.ALPHA",
          "GPUColorWrite.ALL"
        ],
        "optional": true
      }
    }
  ],
  "blend": [
    {
      "alpha": {
        "type": "blendFactor"
      },
      "color": {
        "type": "blendFactor"
      }
    }
  ],
  "blendFactor": [
    {
      "operation": {
        "type": "string",
        "optional": true,
        "enum": [
          "add",
          "max",
          "min",
          "reverse-subtract",
          "subtract"
        ]
      },
      "dstFactor": {
        "type": "blendFactorOperation",
        "enum": true,
        "inFile": true,
        "optional": true,
        "conditions": {
          "blendOperationCompatible": true
        }
      },
      "srcFactor": {
        "type": "blendFactorOperation",
        "enum": true,
        "inFile": true,
        "optional": true,
        "conditions": {
          "blendOperationCompatible": true
        }

      }
    }
  ],
  "multisample": [
    {
      "alphaToCoverageEnabled": {
        "optional": true,
        "type": "boolean"
      },
      "count": {
        "type": "uint",
        "conditions": {
          "attachmentTextureCompatible": true
        },
        "optional": true
      },
      "mask": {
        "type": "bitmask",
        "optional": true
      }
    }
  ],
  "primitive": [
    {
      "cullMode": {
        "type": "string",
        "enum": [
          "back",
          "front",
          "none"
        ],
        "optional": true
      },
      "frontFace": {
        "type": "string",
        "enum": [
          "ccw",
          "cw"
        ],
        "optional": true
      },
      "topology": {
        "type": "string",
        "optional": true,
        "enum": [
          "line-list",
          "line-strip",
          "point-list",
          "triangle-list",
          "triangle-strip"
        ]
      },
      "stripIndexFormat": {
        "type": "string",
        "enum": true,
        "conditions": {
          "constraints": true,
          "enum": {
            "topology": {
              "line-list": [],
              "point-list": [],
              "triangle-list": [],
              "line-strip": ["uint16", "uint32"],
              "triangle-strip": ["uint16", "uint32"]
            }
          }
        },
        "optional": true
      }
    }
  ],
  "vertex": [
    {
      "entryPoint": {
        "type": "shaderEntryPoint"
      },
      "module": {
        "type": "GPUShaderModule",
        "conditions": {
          "same": ["GPUDevice"],
          "withAttributes": {
            "GPUShaderModule.label": ["vertex"]
          }
        }
      }
    }
  ]
}