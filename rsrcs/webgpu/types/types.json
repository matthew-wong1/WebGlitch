{
  "clearValue": [
    {
      "r": {
        "type": "rgba"
      },
      "g": {
        "type": "rgba"
      },
      "b": {
        "type": "rgba"
      },
      "a": {
        "type": "rgba"
      }
    }
  ],

  "colorAttachment": [
    {
      "clearValue": {
        "type": "clearValue",
        "optional": true
      },
      "loadOp": {
        "fieldName": "",
        "type": "string",
        "enum": [
          "clear",
          "load"
        ]
      },
      "storeOp": {
        "type": "string",
        "enum": [
          "discard",
          "store"
        ]
      },
      "resolveTarget": {
        "type": "GPUTextureView",
        "optional": true
      },
      "view": {
        "type": "GPUTextureView"
      }
    }
  ],

  "depthStencilAttachment": [
    {
      "depthClearValue": {
        "type": "double",
        "conditions": {
          "min": 0.0,
          "max": 1.0
        },
        "optional": true
      },
      "depthReadOnly": {
        "type": "boolean",
        "optional": true
      },
      "depthStoreOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "discard",
          "store"
        ]
      },
      "stencilClearValue": {
        "type": "uint",
        "optional": true
      },
      "stencilLoadOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "clear",
          "load"
        ]
      },
      "stencilReadOnly": {
        "type": "boolean",
        "optional": true
      },
      "stencilStoreOp": {
        "type": "string",
        "optional": true,
        "enum": [
          "discard",
          "store"
        ]
      },
      "view": {
        "type": "GPUTextureView"
      }
    }
  ],

  "textureSize": [
    {
      "width": {
        "type": "uint",
        "conditions": {
          "constraints": true,
          "max": {
            "name": "dimension",
            "1d": 8192,
            "2d": 8192,
            "3d": 2048
          }
        }
      },
      "height": {
        "type": "uint",
        "conditions": {
          "constraints": true,
          "max": {
            "name": "dimension",
            "1d": 1,
            "2d": 8192,
            "3d": 2048
          }
        },
        "optional": true
      },
      "depthOrArrayLayers": {
        "type": "uint",
        "conditions": {
          "constraints": true,
          "max": {
            "name": "dimension",
            "1d": 1,
            "2d": 256,
            "3d": 2048
          }
        }
      }
    }
  ]
}